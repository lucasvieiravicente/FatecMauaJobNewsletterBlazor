<li id="navItem" class="nav-item px-3">
    <NavLink class="nav-link" href="@Href" @onclick="Function">
        <span class="@IconClass" aria-hidden="true"></span> @Title
    </NavLink>
</li>

@code {
    [Parameter]
    public string Href { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string IconClass { get; set; }

    [Parameter]
    public Func<Task> Function { get; set; }
}
